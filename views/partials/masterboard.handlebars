{{#each Words}}
<div data-id="{{id}}" name="word-{{id}}" data-group="{{group_type}}" class="grid word-master">
    <div class="word">
        <div class="agent-{{group_type}} word__side word__side--front  word__side--front-{{id}} not-selected">
            {{!-- visible-{{visible}}// view css to be handled server side later --}}
            {{word}}
        </div>
        <div class="agent-back-{{group_type}} word__side word__side--back  word__side--back-{{id}} selected">
            {{word}}
        </div>
    </div>
</div>
{{/each}}